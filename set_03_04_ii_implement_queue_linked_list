#include <stdio.h>
#include <stdlib.h>

struct Node { int data; struct Node* next; };
struct Node *front = NULL, *rear = NULL;

void enqueue(int x) {
    struct Node* n = malloc(sizeof(struct Node));
    n->data = x;
    if (!front) front = rear = n, n->next = n;
    else { n->next = front; rear->next = n; rear = n; }
}

void dequeue() {
    if (!front) printf("Queue EMPTY!\n");
    else if (front == rear) { free(front); front = rear = NULL; }
    else { struct Node* t = front; front = front->next; rear->next = front; free(t); }
}

void display() {
    if (!front) { printf("Queue EMPTY!\n"); return; }
    struct Node* t = front;
    printf("Queue: ");
    do { printf("%d ", t->data); t = t->next; } while (t != front);
    printf("\n");
}

int main() {
    int choice, val;
    while (1) {
        printf("\n1.Enqueue 2.Dequeue 3.Display 4.Exit\nEnter choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1: printf("Enter value: "); scanf("%d", &val); enqueue(val); break;
            case 2: dequeue(); break;
            case 3: display(); break;
            case 4: return 0;
            default: printf("Invalid choice!\n");
        }
    }
}

